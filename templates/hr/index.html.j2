<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HRMS - Manage Employees Efficiently</title>
    <link rel="stylesheet" href="{{static ('assets/fontawesome-free/css/all.min.css')}}" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: url('hero-image.png') no-repeat center center / cover;
            color: #0D0000;
            padding: 100px 0;
            position: relative;
        }
        .hero-section .container {
            position: relative;
            z-index: 2;
        }
        .features-section {
            padding: 60px 0;
        }
        .footer-section {
            padding: 30px 0;
        }
    </style>
</head>
<body>

<!-- Header with Navigation -->
<header class="bg-white shadow-sm py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <a href="#" class="navbar-brand">
            <img src="https://as1.ftcdn.net/v2/jpg/04/03/58/26/1000_F_403582675_1TOvn24C0rbmcvwJMv1AufTuWoMivc5n.jpg" alt="HRMS Logo" height="40">
        </a>
        <!--<nav>
            <a href="#" class="mx-3">Dashboard</a>
            <a href="#" class="mx-3">Employees</a>
            <a href="#" class="mx-3">Attendance</a>
            <a href="#" class="mx-3">Leave</a>
            <a href="#" class="mx-3">Salary</a>
        </nav>-->
        <div>
            {% if request.user.is_authenticated %}
                <a href="{{ url('logout') }}" class="btn btn-outline-primary mx-2"><i class="fas fa-sign-out-alt"></i></a>
            {% else %}
                <button class="btn btn-outline-primary mx-2" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
                <!-- <a href="{{ url('signup') }}" class="btn btn-outline-primary mx-2">Sign Up</a> -->
            {% endif %}

        </div>
    </div>
</header>

<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1>HRMS - Employee Management Made Easy</h1>
        <p class="lead">Manage Attendance, Salary, Leave, and more with a seamless interface.</p>
        <div class="mt-4">
            {% if request.user.is_authenticated %}
                Welcome, <strong>{{ request.user.mobile_number }}</strong>
                <a href="{{ url('dashboard') }}" class="btn btn-outline-primary mx-2">Dashboard</a>
            {%else%}
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">Get Started</button>
            {%endif%}
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section bg-light text-center">
    <div class="container">
        <h2 class="mb-4">Manage Your Employees Effectively</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://www.shiftbase.com/hs-fs/hubfs/Employee%20punching%20in%20or%20clocking%20in%20with%20Shiftbase%20punch%20clock%20system.png" alt="Punch In" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Punch In</h5>
                        <p class="card-text">Track employee working hours with an easy punch-in system.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://ubsapp.com/wp-content/uploads/2022/03/attendance_management-copy-2048x1188.png" alt="Attendance" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Attendance</h5>
                        <p class="card-text">Monitor attendance records in real-time.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://5.imimg.com/data5/SELLER/Default/2023/5/305264074/XI/BT/QL/188772168/attendance-leave-management-software-1000x1000.jpg" alt="Leave Management" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Leave Management</h5>
                        <p class="card-text">Manage leave applications and approvals.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <img src="https://media.istockphoto.com/id/1446484713/vector/vector-of-a-computer-with-an-online-payroll-software.jpg?s=1024x1024&w=is&k=20&c=P6rjIgmJ3tgxLGL0WGjqw_VnkbQvv1exnVugWqpY9ZQ=" alt="Salary" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Salary</h5>
                        <p class="card-text">Generate salary slips and manage payroll effortlessly.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer class="footer-section bg-dark text-white text-center">
    <div class="container">
        <p>&copy; 2024 HRMS. All rights reserved.</p>
    </div>
</footer>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Login</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm" action="{{ url('login') }}" method="post">
                 {{ csrf_input }}
                    {#<div class="mb-3">
                        <button type="button" class="btn btn-primary" id="sendOtpButton" onclick="sendOtp()">Send OTP</button>
                    </div>
                    <div class="mb-3">
                        <label for="otp" class="form-label">OTP</label>
                        <input type="text" class="form-control" id="otp" placeholder="Enter OTP">
                    </div>
                    <button type="button" class="btn btn-success" onclick="verifyOtp()">Verify OTP</button>#}
                    <div class="mb-3">
                        <label for="mobileNumber" class="form-label">Mobile Number</label>
                        <input type="text" class="form-control" name="mobile_number" minlength="10" maxlength="10" id="mobileNumber" placeholder="Enter your mobile number">
                    </div>
                    <div class="mb-3">
                        <label for="otp" class="form-label">PIN</label>
                        <input type="password" class="form-control" name="password" minlength="6" maxlength="6" id="otp" placeholder="Enter OTP">
                    </div>
                    <div class="form-group text-end">
                        <a href="" class="">Forgot Pin?</a>
                    </div>
                    <div class="pt-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="remember">
                            <label class="" for="rememberme">Remember Me</label>
                        </div>
                        <button type="submit" name="submit" class="btn btn-success" id="LoginSubmitButton">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Function to simulate sending OTP
    function sendOtp() {
        const mobileNumber = document.getElementById('mobileNumber').value;
        if (mobileNumber.length < 10) {
            alert('Please enter a valid 10-digit mobile number');
            return;
        }

        fetch("{{ url('login') }}", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': '{{ csrf_token }}'
            },
            body: `mobile_number=${mobileNumber}&send_otp=1`
        })
        .then(response => response.json())
        .then(data => {
            if (data.otp) {
                alert('OTP sent successfully!');
            } else {
                alert('Failed to send OTP. Please try again.');
            }
        })
        .catch(error => {
            alert('An error occurred. Please try again later.');
        });
    }

    // Function to verify OTP
    function verifyOtp() {
        const mobileNumber = document.getElementById('mobileNumber').value;
        const otp = document.getElementById('otp').value;

        fetch("{{ url('login') }}", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': '{{ csrf_token }}'
            },
            body: `mobile_number=${mobileNumber}&otp=${otp}&verify_otp=1`
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                alert('Invalid OTP');
            } else {
                alert('Logged in successfully');
                window.location.href = "{{ url('dashboard') }}";
            }
        })
        .catch(error => {
            alert('An error occurred. Please try again later.');
        });
    }
</script>

</body>
</html>
